@model IEnumerable<WebApplication2.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="productsTable" class="table">
    <!-- Table header for Product Model -->
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Category)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
   
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#productsTable').DataTable({
                "ajax": {
                    "url": "/Products/GetProducts",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "name", "autoWidth": true },
                    { "data": "price", "autoWidth": true },
                    { "data": "category", "autoWidth": true },
                    {
                        "data": "id", "width": "50px", "render": function (data) {
                            return '<a class="btn btn-default" href="/Products/Edit/' + data + '">Edit</a>';
                        }
                    },
                    {
                        "data": "id", "width": "50px", "render": function (data) {
                            return '<a class="btn btn-default" href="/Products/Details/' + data + '">Details</a>';
                        }
                    },
                    {
                        "data": "id", "width": "50px", "render": function (data) {
                            return '<a class="btn btn-default" href="/Products/Delete/' + data + '">Delete</a>';
                        }
                    }
                ]
            });
        });
    </script>
}
